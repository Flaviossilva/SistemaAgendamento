<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAgendamento.Views.ItemDetailPage"
             Title="Lista de Contatos">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nome:" FontSize="Medium" />
        <Label Text="{Binding Nome}" FontSize="Small"/>
        <Label Text="Idade:" FontSize="Medium" />
        <Label Text="{Binding Idade}" FontSize="Small"/>
        <Label Text="Telefone:" FontSize="Medium" />
        <Label Text="{Binding Telefone}" FontSize="Small"/>
        <Label Text="Rede Social:" FontSize="Medium" />
        <Label Text="{Binding RedeSocial}" FontSize="Small"/>
        <Label Text="Descrição:" FontSize="Medium" />
        <Label Text="{Binding Descricao}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>